#include <iostream>
#include <stack>
using namespace std;

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	
	stack<int> pilha;
	
	int elemento;
	char cont;
	
	do {
	
	
	cout << "Digite o elemento que deseja inserir na pliha: ";
	cin >> elemento;
	
	pilha.push(elemento);
	
	cout << "Elemento " << elemento << " inserido na pilha." << endl;
	
	cout << "Deseja continuar? (S/N) \n";
	cin >> cont;
} 	while (cont == 'S' || cont =='s');

	if(cont == 'N' || cont == 'n');
	cout << "Todos os elementos foram adicionados na Pilha, boa noite!!!" << endl;

	
	
	return 0;
}
